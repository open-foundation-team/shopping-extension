{
	"manifest_version": 2,
	"name": "Shopping Extension",
	"version": "1.0",
	"author": "Open Foundation (Christian A. Smith Mantas)",
	"description": "Plays copywrited music while you browse shopping sites.",
	"homepage_url": "https://github.com/open-foundation-team/shopping-extension",
	"permissions": [
		"tabs",
		"notifications",
		"storage"
	],
	"background": {
		"scripts": [
			"src/scripts/background.js"
		]
	},
	"browser_action": {
		"default_icon": "public/extension-icon-128.png",
		"default_popup": "src/index.html",
		"default_title": "Shopping Extension"
	},
	"icons": {
		"48": "public/extension-icon-48.png",
		"128": "public/extension-icon-128.png"
	}
}